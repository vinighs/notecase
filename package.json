{
  "name": "notecase",
  "version": "1.0.0",
  "description": "Modern Note-Taking Application",
  "main": "main.js",
  "author": "Fine Threads of Sugar",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:start": "electron .",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "package:store": "electron-windows-store --input-directory ./dist_electron/win-unpacked --output-directory ./windows-store --package-version 1.0.0.0 --package-name Notecase --package-Display-Name 'Notecase'"
  },
  "dependencies": {
    "@excalidraw/excalidraw": "^0.18.0",
    "@lexical/clipboard": "^0.34.0",
    "@lexical/code": "^0.34.0",
    "@lexical/file": "^0.34.0",
    "@lexical/hashtag": "^0.34.0",
    "@lexical/link": "^0.34.0",
    "@lexical/list": "^0.34.0",
    "@lexical/mark": "^0.34.0",
    "@lexical/markdown": "^0.34.0",
    "@lexical/overflow": "^0.34.0",
    "@lexical/plain-text": "^0.34.0",
    "@lexical/react": "^0.34.0",
    "@lexical/rich-text": "^0.34.0",
    "@lexical/selection": "^0.34.0",
    "@lexical/table": "^0.34.0",
    "@lexical/utils": "^0.34.0",
    "bootstrap": "^5.3.6",
    "bootstrap-icons": "^1.13.1",
    "electron-log": "^5.4.2",
    "electron-store": "^10.0.1",
    "js-yaml": "^4.1.0",
    "katex": "^0.16.10",
    "lexical": "^0.34.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.525.0",
    "marked": "^15.0.12",
    "prettier": "^2.8.8",
    "react": "^19.1.0",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^3.1.4",
    "react-router-dom": "^7.6.0",
    "simple-update-notifier": "^2.0.0",
    "turndown": "^7.2.0",
    "y-websocket": "^1.5.4",
    "yjs": ">=13.5.42"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.8",
    "vite": "^6.3.5",
    "vite-plugin-copy": "^0.1.6",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.finethreadsofsugar.notecase",
    "productName": "Notecase",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist_electron"
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "icon": "build/appx/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "appx": {
      "applicationId": "Notecase",
      "identityName": "Finethreadsofsugar.Notecase",
      "publisher": "CN=1731545A-3D39-4457-B16C-4CEE4D6D4C3F",
      "publisherDisplayName": "fine threads of sugar",
      "backgroundColor": "#ffffff"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png"
    },
    "nsis": {
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Notecase"
    }
  }
}
